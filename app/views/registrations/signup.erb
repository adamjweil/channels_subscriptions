<h1>Sign up page</h1>

<form method='post' action='/registrations'>
  <div>
    <label>E-Mail Address</label><br>
    <input type = 'email' name='user[email]' placeholder='e-mail address'>
  </div>
  <div>
    <label>First Name</label><br>
    <input type = 'text' name='user[first_name]' placeholder="first name">
  </div>
  <div>
    <label>Last Name</label><br>
    <input type = 'text' name='user[last_name]' placeholder="last name">
  </div>
    <label>Password</label><br>
    <input type = 'password' name='user[password]' placeholder="password">
  </div>
  <div>
    <input type ='submit'>
  </div>
</form>
