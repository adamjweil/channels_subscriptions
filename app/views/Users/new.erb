<h1>Welcome! Sign up now!</h1>

<% if @errors %>
  <span>Something went wrong:</span>
  <ul class="error-list pad-b-2">
    <% @errors.each do |error| %>
      <li class="error-item"><%= error %></li>
    <% end %>
  </ul>
<% end %>

<form method="post" action="/User/new">
  <label for="Registration">First name</label>
  <input id="title-input" name="users[first_name]" type="text" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">
  <label for="Registration">Last name</label>
  <input id="title-input" name="users[last_name]" type="text" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">
  <label for="Registration">Email</label>
  <input id="title-input" name="users[email]" type="text" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">
  <label for="Registration">Password</label>
  <input id="title-input" name="users[password]" type="password" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <input type="submit" value="Register BA BLAM!" tabindex="3" class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
</form>
